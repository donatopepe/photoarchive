@model IEnumerable<PhotoArchiveCoilsWeb.Models.PhotoArchiveShort>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

        <form asp-controller="PhotoArchives" asp-action="DetailsCode">
            <p>
                Code: <input type="text" name="Code">
                <input type="submit" value="Search Code" />
            </p>
        </form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedTimestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedTimestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedTimestamp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <!--
                |<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                -->
            </td>
        </tr>
}
    </tbody>
</table>
<meta http-equiv="refresh" content="10">